# Enable C++ exceptions and set emergency pool size for exception objects
CONFIG_COMPILER_CXX_EXCEPTIONS=y
CONFIG_COMPILER_CXX_EXCEPTIONS_EMG_POOL_SIZE=1024

CONFIG_FREERTOS_SUPPORT_STATIC_ALLOCATION=n

CONFIG_PARTITION_TABLE_CUSTOM=y
CONFIG_PARTITION_TABLE_CUSTOM_FILENAME="partitions.csv"
CONFIG_PARTITION_TABLE_FILENAME="partitions.csv"

CONFIG_ESPTOOLPY_FLASHSIZE_4MB=y
CONFIG_ESPTOOLPY_FLASHSIZE="4MB"	

CONFIG_PTHREAD_TASK_STACK_SIZE_DEFAULT=3584
CONFIG_ESP32_PTHREAD_TASK_STACK_SIZE_DEFAULT=3584
CONFIG_ESP_MAIN_TASK_STACK_SIZE=6144